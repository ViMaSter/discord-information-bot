{
	"extends": [
		"airbnb",
		"eslint:recommended",
		"plugin:import/recommended",
		"plugin:jest/style"
	],
	"env": {
		"node": true,
		"es6": true,
    "jest/globals": true
	},
  "plugins": ["jest"],
	"parserOptions": {
		"ecmaVersion": 2021,
		"sourceType": "module"
	},
	"rules": {
		"import/extensions": "off"
	},
	"settings": {
		"import/resolver": {
			"node": {
				"extensions": [".js",".jsx"],
				"paths": ["src"],
				"moduleDirectory": ["src", "node_modules"]
			}
		}
	}
}